<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="tax_22c" model="account.tax.template">
        <field name="description">22c</field>
        <field name="chart_template_id" ref="l10n_it_chart_tmpl_personal"/>
        <field name="name">IVA al 22% (credito)</field>
        <field name="sequence" eval="1"/>
        <field name="amount" eval="22"/>
        <field name="amount_type">percent</field>
        <field name="type_tax_use">purchase</field>
        <field name="price_include" eval="False"/>
        <field name="account_id" ref="account_1501"/>
        <field name="refund_account_id" ref="account_1501"/>
        <field name="tag_ids" eval="[(6, 0, [tag_tax_ivac])]"/>
    </record>
    <record id="tax_22d" model="account.tax.template">
        <field name="description">22d</field>
        <field name="chart_template_id" ref="l10n_it_chart_tmpl_personal"/>
        <field name="name">IVA al 22% (debito)</field>
        <field name="sequence" eval="2"/>
        <field name="amount" eval="22"/>
        <field name="amount_type">percent</field>
        <field name="type_tax_use">sale</field>
        <field name="price_include" eval="False"/>
        <field name="account_id" ref="account_2501"/>
        <field name="refund_account_id" ref="account_2501"/>
        <field name="tag_ids" eval="[(6, 0, [tag_tax_ivad])]"/>
    </record>
    <record id="tax_22d_inc" model="account.tax.template">
        <field name="description">22d INC</field>
        <field name="chart_template_id" ref="l10n_it_chart_tmpl_personal"/>
        <field name="name">IVA al 22% (debito) INC</field>
        <field name="sequence" eval="3"/>
        <field name="amount" eval="22"/>
        <field name="amount_type">division</field>
        <field name="type_tax_use">sale</field>
        <field name="price_include" eval="True"/>
        <field name="account_id" ref="account_2501"/>
        <field name="refund_account_id" ref="account_2501"/>
        <field name="tag_ids" eval="[(6, 0, [tag_tax_ivad])]"/>
    </record>
</odoo>
